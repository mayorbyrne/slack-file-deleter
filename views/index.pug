extends layout

block content
  h1= title
  p Welcome to the Slack File Manager.


  a(
    href=`https://slack.com/oauth/authorize?client_id=${CLIENT_ID}&user_scope=files:read,files:write,identity.avatar,identity.basic,identity.email`
    type='checkbox'
    name='agreement'
    checked
  )
    img(
      alt="Sign in with Slack"
      height="40"
      width="172"
      src="https://platform.slack-edge.com/img/sign_in_with_slack.png"
      srcset="https://platform.slack-edge.com/img/sign_in_with_slack.png 1x, https://platform.slack-edge.com/img/sign_in_with_slack@2x.png 2x"
    )
