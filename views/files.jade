extends layout

block content
    h1= title
    p Hello, #{user.name}


    if(files.length == 0)
        p You have no files! You are not the problem!
    else
        div
            table
                thead
                    tr: th Files
                        th Date Created
                tbody
                    each file, i in files
                        tr
                            td
                                a(href="##{file.id}") #{file.name}
                            td= moment(file.created * 1000).format("MM/DD/YYYY")
        script.
            var deleteAll = function () {
                var confirmBox = confirm('Are you sure you want to delete all your files?');
                if (confirmBox) window.location.href = '/deleteAll';
            }

        button(onclick='deleteAll()') Delete All
